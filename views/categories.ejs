<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>to-do-list</title>
    <link rel="stylesheet" href="/src/style.css" />
  </head>
  <body>
    <div class="container todolist__main">
      <h1>/<%= title %></h1>
      <!-- delete items -->
      <% custom.forEach((item)=>{ %>
      <form action="/delete" method="post" class="categories item">
        <input
          type="checkbox"
          name="checkbox"
          value="<%= item._id %>"
          onchange="this.form.submit()"
        />
        <p><%= item.name %></p>
        <input type="hidden" name="listname" value="<%=title%>" />
      </form>
      <% }) %>
      <!-- add items -->
      <form action="/" method="post" class="insert">
        <input
          type="text"
          name="item"
          placeholder="Write something ..."
          autofocus
        />
        <button
          class="customsubmit"
          type="submit"
          name="list"
          value="<%=title%>"
        >
          +
        </button>
      </form>
    </div>
  </body>
</html>
